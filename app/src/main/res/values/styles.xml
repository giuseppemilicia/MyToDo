<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionModeStyle">@style/MyTheme.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/MyTheme.ActionMode.CloseButtonStyle</item>
    </style>

    <style name="MyTheme.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/material_light_white</item>
        <item name="titleTextStyle">@style/MyTheme.ActionMode.Title</item>
    </style>

    <style name="MyTheme.ActionMode.Title" parent="Base.TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/material_grey_600</item>
    </style>

    <style name="MyTheme.ActionMode.CloseButtonStyle" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/material_grey_600</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:color">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="PopupToolbarTheme" parent="AppTheme">

    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@null</item>
    </style>

</resources>
